<input type="text" class="field" value={ recalls ('date') .format (format) } readonly />

<script>
(function (self) {
	self .format = 'LL';
	//parent .remembers ('date');
	self .recalls ('date') || self .stuff .trigger ('date', moment ());
	self .stuff .on ('date', function () {
		self .update ();
	});
	
})(this)
</script>